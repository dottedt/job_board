= form_for company do |f|
  - if company.errors.any?
    #errorExplanation
      %h2
        = pluralize(company.errors.count, "error")
        prohibited this company from being saved:
      %ul
        - company.errors.full_messages.each do |msg|
          %li= msg
  %div
    = f.label :name
    = f.text_field :name
  %div
    = f.label :address
    = f.text_field :address

  %div
    = f.label :url
    = f.text_area :url
  %div
    = f.label :show_address
    = f.check_box :show_address
  %div
    = f.label :show_as_customer
    = f.check_box :show_as_customer
  %div
    = f.submit