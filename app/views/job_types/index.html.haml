%h1 Job Types
%table
  %tr
    %th Name
    %th Skills
    %th{colspan: '3'} Actions
  - @job_types.each do |type|
    %tr
      %td= type.name
      %td= type.skills
      %td= link_to 'Show', type
      %td= link_to 'Edit', edit_job_type_path(type)
      %td= link_to 'Destroy', type, method: :delete, |
            data: { confirm: 'Are you sure?' }    |

%br/
= link_to 'New Type', new_job_type_path

