= form_for job_skill do |f|
  - if job_skill.errors.any?
    #errorExplanation
      %h2
        = pluralize(job_skill.errors.count, 'error')
        prohibited this skill from being saved
      %ul
      - job_skill.errors.full_messages.each do |meg|
        %li= msg

  %div
    = f.label :name
    = f.text_field :name
  %div
    = f.label :version
    = f.text_field :version
  %div
    = f.submit